# Allow access to uploaded files
<IfModule mod_authz_core.c>
    Require all granted
</IfModule>

# For older Apache versions
<IfModule !mod_authz_core.c>
    Order allow,deny
    Allow from all
</IfModule>

# Disable PHP execution in uploads folder for security
<FilesMatch "\.php$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>
